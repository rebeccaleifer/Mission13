@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>
@*@model Mission13.Models.Team*@

<h1 style="text-align: center;">Bowlers</h1>
<h2></h2>
<div class="row m-1 p-1">

    <div id="teams" class="col-2">
        <vc:teams></vc:teams>
    </div>

    <div class="col-10">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <td><b>ID</b></td>
                    <td><b>First Name</b></td>
                    <td><b>Middle Initial</b></td>
                    <td><b>Last Name</b></td>
                    <td><b>Address</b></td>
                    <td><b>City</b></td>
                    <td><b>State</b></td>
                    <td><b>Zip</b></td>
                    <td><b>Phone Number</b></td>
                    <td><b>Team ID</b></td>
                    <td><b>Edit</b></td>
                    <td><b>Delete</b></td>

                </tr>
            </thead>

            <tbody>
                @foreach (Bowler b in Model)
                {
                    <tr>
                        <td>@b.BowlerID</td>
                        <td>@b.BowlerFirstName</td>
                        <td>@b.BowlerMiddleInit</td>
                        <td>@b.BowlerLastName</td>
                        <td>@b.BowlerAddress</td>
                        <td>@b.BowlerCity</td>
                        <td>@b.BowlerState</td>
                        <td>@b.BowlerZip</td>
                        <td>@b.BowlerPhoneNumber</td>
                        <td>@b.TeamID</td>

                        <td>
                            <a asp-controller="Home" asp-action="Edit" asp-route-bowlerid="@b.BowlerID"
                               class="btn btn-warning btn-sm">Edit</a>
                        </td>
                        <td>
                            <a asp-controller="Home" asp-action="DeleteConfirmation" asp-route-bowlerid="@b.BowlerID"
                               class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>