@{
}
@model IEnumerable<Team>

<a asp-controller="Home" asp-action="Index" asp-route-teamid="" asp-route-teamname=""
   class="btn btn-outline-secondary" style="width:120px;">Home</a>

@foreach(Team t in Model)
{
    <a asp-controller="Home" asp-action="Index" asp-route-teamid="@t.TeamID" asp-route-teamname="@t.TeamName" 
       class="btn @(ViewBag.SelectedTeam == t.TeamName ? "btn-primary" : "btn-outline-secondary")"
       style="margin-top: 7px; margin-right: 4px; width:120px;">@t.TeamName</a><br />
}